{
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "name": "Coding with Chrome",
  "short_name": "Coding with Chrome",
  "description": "Learn, improve, or teach coding skills within a Chrome browser.",
  "version": "3.7.23",
  "default_locale": "en",
  "icons": {
    "16":  "icons/16x16.png",
    "32":  "icons/32x32.png",
    "64":  "icons/64x64.png",
    "128": "icons/128x128.png",
    "256": "icons/256x256.png"
  },
  "author": "coding-with-chrome@google.com",
  "file_handlers": {
    "supported": {
      "extensions": [
        "cwc", "txt", "html", "htm", "js", "coffee", "py"
      ]
    },
    "text": {
      "extensions": [
        "text/*"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "LICENSE.html",
      "NOTICE.html"
    ]
  },
  "webview": {
    "partitions": [{
        "name": "static",
        "accessible_resources": ["LICENSE.html", "NOTICE.html"]
      }
    ]
  },
  "minimum_chrome_version": "38",
  "offline_enabled": true,
  "bluetooth": {
    "uuids": [
      "00001101-0000-1000-8000-00805f9b34fb",
      "00000000-deca-fade-deca-deafdecacaff"
    ],
    "low_energy": true,
    "socket": true
  },
  "permissions": [
    "alwaysOnTopWindows",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage", {
      "fileSystem": ["write"]
    },
    "serial",
    "system.memory",
    "identity",
    "tts",
    "usb",
    "unlimitedStorage",
    "webview",
    "https://ssl.gstatic.com/",
    "https://www.googleapis.com/",
    "https://accounts.google.com/"
  ]
}
