#{$prefix}sphero-monitor-intro,
#{$prefix}sphero-monitor-control,
#{$prefix}sphero-monitor-calibration {
  padding: 5px;
  position: relative;
}

#{$prefix}sphero-monitor-control-buttons {
  width: 150px;
  margin: auto;
  padding-bottom: 10px;
}

#{$prefix}sphero-monitor-calibration-buttons {
  width: 200px;
  margin: auto;
  padding-bottom: 10px;
}

#{$prefix}sphero-monitor-control-buttons:first-child {
  padding-left: 3px;
}

#{$prefix}sphero-monitor-system-buttons > div {
  padding: 10px;
}
