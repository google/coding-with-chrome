{namespace cwc.soy.mode.ev3.Calibration autoescape="strict"}


/**
 * Calibration template.
 */
{template .template}
  {@param prefix: string}
  {@param robots: ?}
  <div id="{$prefix}calibration">
    <button type="button" id="{$prefix}detect-sensors">Detect Sensors</button>
    <br>
    Robot model <div id="{$prefix}robot-model" class="goog-select">
      <ul class="goog-menu">
      {foreach $robot in $robots}
        <li class="goog-menuitem">{$robot}</li>
      {/foreach}
        <li class="goog-menuitem">Custom</li>
      </ul>
    </div>
    <div id="{$prefix}robot-custom">
      Wheel diameter <input type="text" id="{$prefix}wheel-diameter" size=4> mm<br>
      Wheel width <input type="text" id="{$prefix}wheel-width" size=4> mm<br>
      Wheelbase <input type="text" id="{$prefix}wheelbase" size=4> mm<br>
      Robot type <input type="text" id="{$prefix}robot-type" size=4><br>
    </div>
    <button type="button" id="{$prefix}set">Calibrate</button>
  </div>
{/template}


/**
 * Calibration stylesheets.
 */
{template .style}

{/template}
