{namespace cwc.soy.mode.ev3.Monitor autoescape="strict"}


/**
 * Runner monitor template.
 */
{template .monitor}
  {@param prefix: string}
  <div id="{$prefix}monitor">
    <div class="mdl-spinner mdl-js-spinner is-active"></div>Waiting for data ...
  </div>
{/template}


/**
 * Intro template.
 */
{template .intro}
  {@param prefix: string}
  <div id="{$prefix}intro">
    These screens allow you to control, monitor and calibrate the EV3 unit.<br>
    <br>
    The monitor screen will help you to understand your robots reactions.<br>
  </div>
{/template}


/**
 * EV3 device / port monitor.
 */
{template .monitorValues}
  {@param devices: ?}
  {@param prefix: string}
  Input<br>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info
                {if $devices[0]}{sp}{$prefix}{$devices[0].css}_{$devices[0].value}{/if}">
      <span>1</span>{if $devices[0]}{$devices[0].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[0]}
        <span title="mode: {$devices[0].mode}">{$devices[0].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info
                {if $devices[1]}{sp}{$prefix}{$devices[1].css}_{$devices[1].value}{/if}">
      <span>2</span>{if $devices[1]}{$devices[1].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[1]}
        <span title="mode: {$devices[1].mode}">{$devices[1].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info
                {if $devices[2]}{sp}{$prefix}{$devices[2].css}_{$devices[2].value}{/if}">
      <span>3</span>{if $devices[2]}{$devices[2].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[2]}
        <span title="mode: {$devices[2].mode}">{$devices[2].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info
                {if $devices[3]}{sp}{$prefix}{$devices[3].css}_{$devices[3].value}{/if}">
      <span>4</span>{if $devices[3]}{$devices[3].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[3]}
        <span title="mode: {$devices[3].mode}">{$devices[3].name}</span>
