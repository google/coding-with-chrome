      {if $devices[16]}
        <span title="mode: {$devices[16].mode}">{$devices[16].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info">
      <span>B</span>{if $devices[17]}{$devices[17].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[17]}
        <span title="mode: {$devices[17].mode}">{$devices[17].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info">
      <span>C</span>{if $devices[18]}{$devices[18].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[18]}
        <span title="mode: {$devices[18].mode}">{$devices[18].name}</span>
      {/if}
    </div>
  </div>
  <div class="{$prefix}interface-view">
    <div class="{$prefix}interface-view-info">
      <span>D</span>{if $devices[19]}{$devices[19].value}{/if}
    </div>
    <div class="{$prefix}interface-view-type">
      {if $devices[19]}
        <span title="mode: {$devices[19].mode}">{$devices[19].name}</span>
      {/if}
    </div>
  </div>
{/template}


/**
 * Control template.
 */
{template .control}
  {@param prefix: string}
  <div id="{$prefix}control">
    Use the buttons belows or the keyboard to control the EV3 manual.<br>
    <div id="{$prefix}control-buttons-body">
      <div id="{$prefix}control-buttons" class="icon_gamepad" title="Moves the robot.">
        games
        <div id="{$prefix}move-left" class="icon_gamepad_button left"></div>
        <div id="{$prefix}move-forward" class="icon_gamepad_button up"></div>
        <div id="{$prefix}move-backward" class="icon_gamepad_button down"></div>
        <div id="{$prefix}move-right" class="icon_gamepad_button right"></div>
      </div>
      <div id="{$prefix}control-buttons-servo">
        <div id="{$prefix}servo-up" class="icon_36px icon_button" title="Moves servo up.">keyboard_arrow_up</div>
        <div id="{$prefix}servo-down" class="icon_36px icon_button" title="Moves servo down.">keyboard_arrow_down</div>
      </div>
    </div>
    <div id="{$prefix}control-commands">
      <div id="{$prefix}ping" class="icon_36px icon_button">notifications_active</div>
      <div class="mdl-tooltip" for="{$prefix}ping">
        Plays a ton on the connected unit.
      </div>
      <div id="{$prefix}stop" class="icon_36px icon_button">pan_tool</div>
      <div class="mdl-tooltip" for="{$prefix}stop">
        Stops the executing of the code and the connected unit. (Space-key)
      </div>
    </div>
  </div>
{/template}


/**
 * Runner monitor stylesheets.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}intro,
  #{$prefix}control,
  #{$prefix}calibration,
  #{$prefix}monitor {lb}
    padding: 5px;
    position: relative;
  {rb}

  #{$prefix}control-buttons-body {lb}
    width: 150px;
    margin: auto;
  {rb}

  #{$prefix}control-buttons {lb}
    position: relative;
    text-align: center;
  {rb}

  #{$prefix}control-buttons-servo {lb}
    height: 75px;
    width: 36px;
    margin-top: 8px;
    float: right;
    border: 1px solid #ccc;
    border-radius: 5px;
  {rb}

  #{$prefix}control-commands {lb}
    padding: 5px;
    margin-left: 50px;
  {rb}

  .{$prefix}interface-view {lb}
    width: 85px;
    height: 60px;
    border: 1px solid #aaa;
    border-radius: 5px;
    background: linear-gradient(to bottom,
      #ffffff 0%,#f3f3f3 65%,#ededed 67%,#ffffff 100%);
    float: left;
    margin: 5px;
  {rb}

  .{$prefix}interface-view-info {lb}
    border-bottom: 1px solid #ccc;
    border-top-left-radius: 5px;
    height: 15px;
  {rb}

  .{$prefix}interface-view-info > span {lb}
    color: #000;
    background-color: #ccc;
    border-left: 1px solid #aaa;
    border-top-left-radius: 5px;
    font-size: 12px;
    width: 15px;
    padding-left: 5px;
    margin-right: 5px;
    display: block;
    float: left;
  {rb}

  .{$prefix}interface-view-type {lb}
    clear: left;
    height: 44px;
  {rb}

  .{$prefix}color_0 {lb}
    color: #000;
    background: #fff;
  {rb}

  .{$prefix}color_1 {lb}
    color: #fff;
    background: #404040;
  {rb}

  .{$prefix}color_2 {lb}
    color: #000;
    background: #4040ff;
  {rb}

  .{$prefix}color_3 {lb}
    color: #000;
    background: #40ff40;
  {rb}

  .{$prefix}color_4 {lb}
    color: #000;
    background: #ffff40;
  {rb}

  .{$prefix}color_5 {lb}
    color: #000;
    background: #ff4040;
  {rb}

  .{$prefix}color_6 {lb}
    color: #000;
    background: #fff;
  {rb}

  .{$prefix}color_7 {lb}
    color: #000;
    background: #896040;
  {rb}

{/template}
