#{$prefix}terminal-body {
  background: #eee;
  display: flex;
  flex-direction: column;
  height: 200px;
  width: 100%;
}

#{$prefix}terminal-content {
  background: #111;
  color: lime;
  letter-spacing: 0.5px;
  padding: 0.5em;
  flex: 1;
  font-family: "Consolas","Courier new","Courier",monospace;
  overflow-y: scroll;
}

#{$prefix}terminal-content .error {
  color: red;
}

#{$prefix}terminal-content .meta {
  font-style: italic;
}

#{$prefix}terminal-toolbar {
  height: 24px;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #ebebeb;
  padding: 1px 5px;
}

#{$prefix}terminal-toolbar .material-icons {
  color: #2B78FE;
  vertical-align: middle;
}

#{$prefix}terminal-clear {
  float: right;
  height: 22px;
  width: 22px;
  min-width: 22px;
}

#{$prefix}terminal-clear .material-icons {
  font-size: 20px;
}
