{namespace cwc.soy.SelectScreenNormal autoescape="strict"}


/**
 * Normal overview page.
 */
{template .overview}
  {@param prefix: string}
  <div id="{$prefix}overview">

    {call .overviewHeader_}
      {param prefix: $prefix /}
      {param active_link: 'home' /}
    {/call}

    <div class="cwc-content">

      {call .header_}
        {param title: 'Block Coding' /}
        {param opt_color_class: 'bg-light-blue' /}
        {param opt_icon: 'extension' /}
      {/call}

      <div class="mdl-grid">

        {call .selectCard_}
          {param prefix: $prefix /}
          {param title: 'Blockly' /}
          {param text: 'Use Blockly to build code by dragging and dropping code blocks' /}
          {param link_text: 'Go Blockly' /}
          {param link_id: 'basic' /}
          {param opt_color_class: 'bg-light-blue' /}
          {param opt_icon: 'school' /}
        {/call}

        {call .selectCard_}
          {param prefix: $prefix /}
          {param title: 'Draw' /}
          {param text: 'Create artworks of color and forms' /}
          {param link_text: 'Start Drawing' /}
          {param link_id: 'draw' /}
          {param opt_color_class: 'bg-blue' /}
          {param opt_hidden: true /}
        {/call}

        {call .selectCard_}
          {param prefix: $prefix /}
          {param title: 'Music' /}
          {param text: 'Create some music.' /}
          {param link_text: 'Make some noise' /}
          {param link_id: 'music' /}
          {param opt_hidden: true /}
        {/call}

        {call .selectCard_}
          {param prefix: $prefix /}
          {param title: 'Blockly Robots' /}
          {param text: 'Control real or on-screen robots with Blockly' /}
          {param link_text: 'Go Robots' /}
          {param link_id: 'robot' /}
          {param opt_color_class: 'bg-orange' /}
          {param opt_icon: 'memory' /}
        {/call}

      </div>

    </div>
  </div>
{/template}


