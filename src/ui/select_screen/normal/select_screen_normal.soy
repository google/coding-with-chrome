/**
 * Header design.
 */
{template .header_}
  {@param title: string}
  {@param? opt_icon: string}
  {@param? opt_text: string}
  {@param? opt_color_class: string}

  <header class="cwc-band{if $opt_color_class} {$opt_color_class}{/if}">
    {if $opt_icon}<div class="cwc-band-icon icon_auto">{$opt_icon}</div>{/if}
    <div class="cwc-band-text">
      <div class="mdl-typography--display-2 mdl-typography--font-thin">{$title}</div>
      {if $opt_text}<p class="mdl-typography--headline mdl-typography--font-thin">{$opt_text}</p>{/if}
    </div>
  </header>
{/template}


/**
 * Overview header.
 */
{template .overviewHeader_}
  {@param prefix: string}
  {@param active_link: string}

  <header id="{$prefix}navigation-overview" class="mdl-layout__header-row mdl-layout__header bg_10_pct_black">
    <nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
      <a id="{$prefix}menu-home" class="mdl-navigation__link icon_24px_raw{if $active_link == 'home'} is-active{/if}" href="#">home</a>
      <a id="{$prefix}menu-basic" class="mdl-navigation__link{if $active_link == 'basic'} is-active{/if}" href="#">Blocks</a>
      <a id="{$prefix}menu-draw" class="hidden mdl-navigation__link{if $active_link == 'draw'} is-active{/if}" href="#">Draw</a>
      <a id="{$prefix}menu-music" class="hidden mdl-navigation__link{if $active_link == 'music'} is-active{/if}" href="#">Music</a>
      <a id="{$prefix}menu-robot" class="mdl-navigation__link{if $active_link == 'robot'} is-active{/if}" href="#">Robots</a>
    </nav>
  </header>
{/template}


/**
 * Robot header.
 */
{template .robotHeader_}
  {@param prefix: string}
  {@param active_link: string}

  <header id="{$prefix}navigation-robot" class="mdl-layout__header-row mdl-layout__header">
    <nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
      <a id="{$prefix}menu-ev3" class="mdl-navigation__link{if $active_link == 'ev3'} is-active{/if}" href="#">EV3</a>
      <a id="{$prefix}menu-sphero" class="mdl-navigation__link{if $active_link == 'sphero'} is-active{/if}" href="#">Sphero</a>
    </nav>
  </header>
{/template}


/**
 * Header card design.
 */
{template .selectSection_}
  {@param prefix: string}
  {@param title: string}
  {@param text: string}
  {@param link_text: string}
  {@param link_id: string}
  {@param? opt_image: string}
  {@param? opt_icon: string}
  {@param? opt_color_class: string}

  <section class="cwc-select-section section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
    <header class="mdl-cell mdl-cell--3-col-desktop mdl-cell--2-col-tablet mdl-cell--4-col-phone{if $opt_color_class} {$opt_color_class}{/if}">
      {if $opt_image}<img src="{$opt_image}">{/if}
      {if $opt_icon}<i class="icon_auto">{$opt_icon}</i>{/if}
    </header>
    <div class="mdl-card mdl-cell mdl-cell--9-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">
      <div class="mdl-card__supporting-text">
        <h4>{$title}</h4>
        {$text}
      </div>
      <div class="mdl-card__actions">
        <a href="#" id="{$prefix}link-{$link_id}" class="mdl-button">{$link_text}</a>
      </div>
    </div>
  </section>
{/template}


/**
 * Select card design.
 */
{template .selectCard_}
  {@param prefix: string}
  {@param title: string}
  {@param text: string}
  {@param link_text: string}
  {@param link_id: string}
  {@param? opt_image: string}
  {@param? opt_icon: string}
  {@param? opt_color_class: string}
  {@param? opt_hidden: bool}

  <div class="cwc-select-card mdl-cell mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-card mdl-shadow--3dp{if $opt_hidden} hidden{/if}">
    <div class="mdl-card__media{if $opt_color_class} {$opt_color_class}{/if}">
      {if $opt_image}<img src="{$opt_image}">{/if}
      {if $opt_icon}<i class="icon_auto">{$opt_icon}</i>{/if}
    </div>
    <div class="mdl-card__title">
       <h4 class="mdl-card__title-text">{$title}</h4>
    </div>
    <div class="mdl-card__supporting-text">
      <span class="mdl-typography--font-light mdl-typography--subhead">{$text}</span>
    </div>
    <div class="mdl-card__actions">
       <a href="#" id="{$prefix}link-{$link_id}" class="android-link mdl-button mdl-js-button mdl-typography--text-uppercase">
         {$link_text}
         <i class="material-icons">chevron_right</i>
       </a>
    </div>
  </div>
{/template}


/**
