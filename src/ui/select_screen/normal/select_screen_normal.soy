       {if $opt_image}<img src="{$opt_image}">{/if}
       {if $opt_icon}<i class="icon_auto">{$opt_icon}</i>{/if}
       {if $opt_text}<div>{$opt_text}</div>{/if}
    </div>
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">{$title}</h2>
    </div>
    <div class="mdl-card__supporting-text">{$text}</div>
    <div class="mdl-card__actions mdl-card--border">
      <a href="#" id="{$prefix}link-{$link_id}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent">
        {$link_text}
        <span class="mdl-button__ripple-container"><span class="mdl-ripple"></span></span>
      </a>
    </div>
  </div>
{/template}


/**
 * Custom footer.
 */
{template .footer_}
  {@param text: string}
  {@param? opt_text: string}

  <footer class="mdl-mini-footer">
    <div class="mdl-mini-footer__left-section">
      {$text}{if $opt_text}<br>{$opt_text}{/if}
    </div>
  </footer>
{/template}


/**
 * CSS style definitions.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}navigation-overview,
  #{$prefix}navigation-robot {lb}
    min-height: 44px;
  {rb}

  #{$prefix}navigation-overview .mdl-navigation__link,
  #{$prefix}navigation-robot .mdl-navigation__link {lb}
    line-height: 44px;
  {rb}

  #{$prefix}navigation-robot .mdl-navigation {lb}
    margin-left: 71px;
  {rb}

  #{$prefix}navigation-overview .mdl-layout__header-row,
  #{$prefix}navigation-robot .mdl-layout__header-row {lb}
    padding: 0;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.08);
    text-transform: uppercase;
    height: 45px;
  {rb}

  #{$prefix}navigation-overview .is-active,
  #{$prefix}navigation-robot .is-active {lb}
    position: relative;
    font-weight: bold;
  {rb}

  #{$prefix}navigation-overview .is-active:after,
  #{$prefix}navigation-robot .is-active:after {lb}
    content: "";
    width: 70%;
    height: 2px;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: rgb(255,64,129);
    left: 15%;
  {rb}

  #{$prefix}overview .mdl-card__media {lb}
    min-height: 150px;
    overflow: hidden;
  {rb}

  #{$prefix}overview .mdl-card__media img {lb}
    width: 100%;
  {rb}

  #{$prefix}overview .mdl-card__title {lb}
    background: transparent;
    height: auto;
  {rb}

  #{$prefix}overview .mdl-card__title-text {lb}
    color: black;
    height: auto;
  {rb}

  #{$prefix}overview .mdl-card__supporting-text {lb}
    height: auto;
    color: black;
    padding-bottom: 56px;
  {rb}

  #{$prefix}overview .mdl-card__actions {lb}
    position: absolute;
    bottom: 0;
  {rb}

  #{$prefix}overview .mdl-card__actions a {lb}
    border-top: none;
    font-size: 16px;
    color: #8bc34a;
  {rb}

{/template}
