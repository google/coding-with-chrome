{namespace cwc.soy.SelectScreenNormal.robot.sphero.classic autoescape="strict"}


/**
 * Sphero 2.0 overview page.
 */
{template .overview}

  {call cwc.soy.SelectScreenTemplate.container}

    {param infobar kind="html"}
      {call cwc.soy.SelectScreenTemplate.bluetooth data="all" /}
    {/param}

    {param header kind="html"}
      {call cwc.soy.SelectScreenTemplate.header}
        {param title: 'Robots: Sphero 2.0' /}
        {param opt_text: 'Control a Sphero 2.0 with blocks' /}
        {param opt_icon: 'adjust' /}
      {/call}
    {/param}

    {param content kind="html"}
      {call cwc.soy.SelectScreenTemplate.fileCardList}
        {param content kind="html"}
          {call cwc.soy.SelectScreenTemplate.fileCard data="all"}
            {param title: 'New program' /}
            {param text: 'Begin a new program to drive a Sphero or an on-screen robot with Blockly' /}
            {param opt_link_text: 'new Sphero blocks program' /}
            {param mode: 'sphero_blockly' /}
            {param opt_image: '' /}
            {param opt_color_class: 'bg-light-blue' /}
            {param opt_icon: 'insert_drive_file' /}
          {/call}

          {call cwc.soy.SelectScreenTemplate.fileCard data="all"}
            {param title: 'Rectangle example' /}
            {param text: 'Try a Sphero example - rolling a rectangle' /}
            {param file: 'sphero/classic/blocks/Sphero-rectangle.cwc' /}
            {param opt_color_class: 'bg-blue' /}
            {param opt_icon: 'crop_square' /}
          {/call}

          {call cwc.soy.SelectScreenTemplate.fileCard data="all"}
            {param title: 'Collision Example' /}
            {param text: 'Try a Sphero example - change color on collision' /}
            {param file: 'sphero/classic/blocks/Sphero-collision.cwc' /}
            {param opt_color_class: 'bg-blue' /}
            {param opt_icon: 'perm_scan_wifi' /}
          {/call}
        {/param}
      {/call}
    {/param}

  {/call}

  {call cwc.soy.SelectScreenTemplate.footer}
    {param text: 'Trademarks are the property of their respective owners. Sphero® and OllieTM are trademarks of Sphero, Inc. dba Sphero®. All rights reserved.' /}
  {/call}

{/template}
