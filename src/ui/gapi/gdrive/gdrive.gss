#{$prefix}gdrive-body {
  min-width: 700px;
}

#{$prefix}gdrive-menu {
  width: 150px;
  height: 205px;
  border-right: 1px solid #ccc;
  float: left;
  padding-left: 20px;
}

#{$prefix}gdrive-menu>div {
  border: 0;
  width: 150px;
  box-shadow: none;
}

#{$prefix}gdrive-menu li span {
  font-size: 14px;
}

#{$prefix}gdrive-menu li:hover {
  background: lightgrey;
  cursor: pointer;
  cursor: hand;
}

.{$prefix}gdrive-menu-selected {
  color: blue;
  font-weight: bold;
}

#{$prefix}gdrive-content {
  overflow: hidden;
  height: 450px;
}

#{$prefix}gdrive-file_list {
  position: relative;
  min-width: 750px;
  height: 350px;
  overflow: scroll;
}

#{$prefix}gdrive-file_list td {
  border-bottom: 1px solid #EBEBEB;
}

#{$prefix}gdrive-file_list thead {
  background: #fff;
}

#{$prefix}gdrive-file_list tr {
  padding-top: 20px;
}

#{$prefix}gdrive-file_list tr:hover td {
  background: #ffffcc;
}

#{$prefix}gdrive-file_list tr td webview {
  width: 16px;
  height: 16px;
}
