{namespace cwc.soy.ConnectionManager autoescape="strict"}


/**
 * Connection Manager template..
 */
{template .template}
  {@param prefix: string}
  <div id="{$prefix}body">
    <div id="{$prefix}toolbar">
     <h3>Connection Manager</h3>
    </div>
    <div id="{$prefix}content"></div>
  </div>
{/template}


/**
 * Serial Devices: Port selection.
 */
{template .serialDevice}
  {@param prefix: string}
  <h2>Device Selection</h2>
  <p>
    Please select the port your device is connected to.
  </p>
  <p>
   <div id="{$prefix}serial-devices"></div>
  </p>
{/template}


/**
 * Serial Devices: Waiting.
 */
{template .serialDeviceWait}
  <p>
    Please wait. Gathering serial devices â€¦
  </p>
{/template}


/**
 * Serial Devices: No device found.
 */
{template .serialDeviceNone}
  {@param prefix: string}
  <h2>Found no supported serial Device!</h2>
  <p>
    Please check all connections and make sure that the device is turned on.<br>
    Click on the refresh button after the device is connected and turned on.
  </p>
  <div id="{$prefix}link-refresh" class="goog-button">Refresh</div>
  <div id="{$prefix}link-offline" class="goog-button">Offline mode</div>
{/template}


/**
 * Connection Manager style definitions.
 */
{template .style}
  {@param prefix: string}
  .{$prefix}button-bar .goog-button{lb}
    float: left;
    width: 100px;
    margin: 20px;
  {rb}


  #{$prefix}body {lb}
    background-color: #fff;
    width: 500px;
    height: 300px;
    margin: 150px auto;
    border: 1px solid #ccc;
  {rb}

  #{$prefix}toolbar {lb}
    position: relative;
  {rb}

  #{$prefix}toolbar h3 {lb}
    color: #fff;
    margin: 0;
    position: absolute;
    left: 40px;
    top: 8px;
  {rb}

  #{$prefix}content {lb}
    padding: 5px;
  {rb}
{/template}
