#{$prefix}turtle-body {
  height: 100%;
}

#{$prefix}turtle-content {
  background: #fff;
  height: 100%;
  overflow: hidden;
  position: relative;
  width: 100%;
}

#{$prefix}turtle-content.hide {
  display: none;
  width: 1px;
  height: 1px;
}

#{$prefix}turtle-content.show {
  display: block;
  width: 100%;
  height: 100%;
}

#{$prefix}turtle-content iframe,
#{$prefix}turtle-content webview {
  display: flex;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
