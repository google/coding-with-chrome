{namespace cwc.soy.ui.Navigation autoescape="strict"}

/**
 * Main HTML template for the Coding with Chrome GUI.
 */
{template .template}
  {@param prefix: string}

  <div id="{$prefix}header">
    {call .header}
      {param prefix: $prefix /}
      {param title: 'Coding with Chrome' /}
    {/call}
  </div>

  <nav id="{$prefix}items" class="mdl-navigation">

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'New project' /}
      {param title: 'Start a new project' /}
      {param id: 'new-project' /}
      {param opt_icon: 'apps' /}
    {/call}

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'New file' /}
      {param title: 'Start a file' /}
      {param id: 'new-file' /}
      {param opt_icon: 'add' /}
    {/call}

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'Open file' /}
      {param title: 'Open a local file ...' /}
      {param id: 'open-file' /}
      {param opt_icon: 'open_in_browser' /}
    {/call}

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'Save as new file' /}
      {param title: 'Save as new file ...' /}
      {param id: 'save-file' /}
      {param opt_icon: 'save' /}
    {/call}

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'Open Google Drive file' /}
      {param title: 'Open a Google Drive file ...' /}
      {param id: 'open-google-drive' /}
      {param opt_icon: 'open_in_browser' /}
    {/call}

    {call .navigationLink_}
      {param prefix: $prefix /}
      {param text: 'Save as Google Drive file' /}
      {param title: 'Save as Google Drive file ...' /}
      {param id: 'save-google-drive' /}
      {param opt_icon: 'save' /}
    {/call}

  </nav>

  <footer class="mdl-mini-footer">
    <div id="{$prefix}footer_left" class="mdl-mini-footer__left-section">

      {call .linkButton_}
        {param prefix: $prefix /}
        {param text: 'About' /}
        {param title: 'Learn more about Coding with Chrome' /}
        {param id: 'about' /}
      {/call}

    </div>
    <div id="{$prefix}footer_right" class="mdl-mini-footer__right-section">

      {call .iconButton_}
        {param prefix: $prefix /}
        {param icon: 'build' /}
        {param title: 'Open Debug' /}
        {param id: 'debug' /}
      {/call}

      {call .iconButton_}
        {param prefix: $prefix /}
        {param icon: 'settings' /}
        {param title: 'Open settings' /}
        {param id: 'settings' /}
      {/call}

      {call .iconButton_}
        {param prefix: $prefix /}
        {param icon: 'help' /}
        {param title: 'Help' /}
        {param id: 'help' /}
      {/call}

    </div>
  </footer>

{/template}


/**
 * Header template.
 */
{template .header}
  {@param title: string}
  {@param? opt_icon: string}
  {@param? opt_color_class: string}

  <header class="mdl-layout__header{if $opt_color_class} {$opt_color_class}{/if}">
    {msg desc=""}{$title}{/msg}
    {if $opt_icon}<i class="icon_auto">{$opt_icon}</i>{/if}
  </header>

{/template}


/**
 * Navigation link item.
 */
{template .navigationLink_}
  {@param prefix: string}
  {@param text: string}
  {@param title: string}
  {@param id: string}
  {@param? opt_icon: string}

  <div id="{$prefix}{$id}" class="link_button mdl-navigation__link" title="{msg desc=""}{$title}{/msg}" role="button" tabindex="0">
    {msg desc=""}{$text}{/msg}
    {if $opt_icon}<i class="icon_auto">{$opt_icon}</i>{/if}
  </div>
{/template}


/**
 * Navigation text button.
 */
{template .linkButton_}
  {@param prefix: string}
  {@param text: string}
  {@param title: string}
  {@param id: string}

  <div id="{$prefix}{$id}" class="link_button" title="{msg desc=""}{$title}{/msg}" role="button" tabindex="0">
    {msg desc=""}{$text}{/msg}
  </div>
{/template}


/**
 * Navigation icon button.
 */
{template .iconButton_}
  {@param prefix: string}
  {@param icon: string}
  {@param title: string}
  {@param id: string}

  <div id="{$prefix}{$id}" class="icon_24px icon_button" title="{msg desc=""}{$title}{/msg}" role="button" tabindex="0">
    {$icon}
  </div>
{/template}


/**
 * Preview style definitions.
 */
{template .style}
  {@param prefix: string}

  #{$prefix}header {lb}
    height: 60px;
  {rb}

  #{$prefix}header .mdl-layout__header {lb}
    padding: 16px 40px;
    font-size: 16px;
  {rb}

  #{$prefix}header .mdl-layout__header > i{lb}
    position: absolute;
    left: 10px;
    top: 13px;
    font-size: 24px;
  {rb}

  #{$prefix}items {lb}
    padding: 0;
  {rb}

  #{$prefix}footer_right .icon_24px{lb}
    padding-left: 10px;
  {rb}

{/template}
