#{$prefix}preview-chrome,
#{$prefix}preview-body,
#{$prefix}preview-content {
  align-content: stretch;
  display: flex;
  flex-direction: column;
  flex: 1 1 auto;
  justify-content: flex-start;
}

#{$prefix}preview-body .mdl-layout__header-row {
  padding: 0 10px 0 20px;
}

#{$prefix}preview-content {
  background: #fff;
  position: relative;
  -webkit-box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
  -moz-box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
}

#{$prefix}preview-content.hide {
  display: none;
  width: 1px;
  height: 1px;
}

#{$prefix}preview-content.show {
  display: block;
  width: 100%;
  height: 100%;
}

#{$prefix}preview-content iframe,
#{$prefix}preview-content webview {
  flex: 1 1 auto;
  min-height: 100vh;
  min-width: 100vw;
}

#{$prefix}preview-infobar {
  flex: 0 1 auto;
  height: 26px;
  min-height: 26px;
}
