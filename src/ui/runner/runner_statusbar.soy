{namespace cwc.soy.RunnerStatusbar autoescape="strict"}

/**
 * HTML template for the statusbar.
 */
{template .template}
  {@param prefix: string}
   <div id="{$prefix}statusbar"></div>
{/template}


/**
 * Runner statusbar style definitions.
 */
{template .style}
  {@param prefix: string}
  #{$prefix}statusbar {lb}
    background: #CFD8DC;
    position: absolute;
    bottom: 0;
    left: 0;
    padding-right: 5px;
    padding-left: 5px;
    border-top-right-radius: 5px;
    height: 20px;
    line-height: 20px;
    z-index: 12;
  {rb}

{/template}
