#{$prefix}runner-monitor-toolbar,
#{$prefix}runner-monitor-toolbar .mdl-layout__tab-bar,
#{$prefix}runner-monitor-toolbar .mdl-layout__tab,
#{$prefix}runner-monitor-toolbar .mdl-layout__tab span {
  height: 34px;
}

#{$prefix}runner-monitor-toolbar {
  min-height: 34px;
}

#{$prefix}runner-monitor-toolbar .mdl-layout__tab span {
  padding-top: 6px;
}

#{$prefix}runner-monitor-content {
  position: relative;
}

#{$prefix}runner-monitor-main > div {
  display: none;
}

#{$prefix}runner-monitor-main > div.is-active {
  display: block;
}

#{$prefix}runner-monitor-main-run,
#{$prefix}runner-monitor-main-stop {
  background: #ddd;
  border-radius: 90px;
  border: 6px solid #000;
  display: block;
  font-size: 168px;
  height: 168px;
  margin: auto;
  margin-top: 16px;
  width: 168px;
}

#{$prefix}runner-monitor-statusbar {
  height: 26px;
  background: #f5f5f5;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #ebebeb;
}
